#Main CSS: IMPORTANT
.root {
    -fx-background-color: linear-gradient(#61a2b1, #2A5058);
}

.menu-bar {
    -fx-background-color: linear-gradient(#61a2b1, #2A5058);
}

.menu-item {
    -fx-text-fill: white;
}









/* Sidebar styling */
.vbox {
    -fx-background-color: #2A5058; /* Dark background color for the sidebar */
    -fx-padding: 15px;             /* Add some padding inside the sidebar */
    -fx-spacing: 10px;             /* Space between elements (buttons, labels) */
    -fx-alignment: top-center;     /* Align elements to the top-center */
}

/* Welcome label styling */
.label {
    -fx-font-size: 18px;               /* Slightly larger text for the welcome label */
    -fx-font-weight: bold;             /* Make the text bold */
    -fx-text-fill: white;              /* White text color */
    -fx-padding: 10px;                 /* Add padding around the label */
    -fx-alignment: center;             /* Center-align the label */
}

/* Button styling */
.button {
    -fx-font-size: 14px;               /* Set font size */
    -fx-text-fill: white;              /* White text color */
    -fx-background-color: #61a2b1;     /* Light blue background for the button */
    -fx-background-radius: 5px;        /* Rounded corners */
    -fx-padding: 10px;                 /* Add padding inside the button */
    -fx-pref-width: 180px;             /* Set a preferred width for consistency */
    -fx-alignment: center;             /* Center-align the text inside the button */
    -fx-border: none;                  /* Remove border */
}

/* Hover effect for buttons */
.button:hover {
    -fx-background-color: #507c86;     /* Darker background on hover */
    -fx-cursor: hand;                  /* Change the cursor to a hand on hover */
}

/* Separator styling (used between buttons) */
.separator {
    -fx-background-color: white;       /* White separator line */
    -fx-padding: 5px 0;                /* Add padding to the separator */
}

/* Active state for buttons when clicked (optional) */
.button:pressed {
    -fx-background-color: #3d6470;     /* Darker background color when pressed */
}
